<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Spinner
            android:id="@+id/field"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/year"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/year"
            android:entries="@array/indicator" />

        <Spinner
            android:id="@+id/year"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="19dp"
            android:entries="@array/year" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/year"
            android:layout_below="@+id/field"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="@string/course" >

            <requestFocus />
        </AutoCompleteTextView>

        <Button
            android:id="@+id/search"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/autoCompleteTextView"
            android:layout_centerVertical="true"
            android:text="@string/search" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="23dp"
            android:layout_toRightOf="@+id/autoCompleteTextView" >
        </ListView>

    </RelativeLayout>

</LinearLayout>