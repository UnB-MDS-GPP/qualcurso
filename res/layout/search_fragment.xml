<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".SearchByIndicatorFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Spinner
            android:id="@+id/year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/course_institution"
            android:layout_alignTop="@+id/field"
            android:layout_toRightOf="@+id/between"
            android:entries="@array/year" />

        <Spinner
            android:id="@+id/course_institution"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/listBy"
            android:layout_toRightOf="@+id/listBy"
            android:entries="@array/list" />

        <TextView
            android:id="@+id/listBy"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/between"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:gravity="fill"
            android:text="@string/field_name"
            android:textSize="@dimen/field_dimension" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/between"
            android:layout_toRightOf="@+id/secondNumber"
            android:text="@string/max" />

        <Spinner
            android:id="@+id/field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/buttonSearch"
            android:layout_below="@+id/course_institution"
            android:layout_margin="10dp"
            android:layout_marginTop="7dp"
            android:entries="@array/indicator" />

        <TextView
            android:id="@+id/between"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/buttonSearch"
            android:layout_below="@+id/field"
            android:layout_marginRight="55dp"
            android:layout_marginTop="18dp"
            android:text="@string/between"
            android:textSize="@dimen/between_dimension" />

        <EditText
            android:id="@+id/secondNumber"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/between"
            android:layout_alignBottom="@+id/between"
            android:layout_alignLeft="@+id/course_institution"
            android:layout_marginLeft="18dp"
            android:ems="10"
            android:inputType="number" />

        <EditText
            android:id="@+id/firstNumber"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/between"
            android:layout_alignBottom="@+id/between"
            android:layout_alignLeft="@+id/field"
            android:ems="10"
            android:inputType="number" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonSearch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:text="@string/line" />

        <Button
            android:id="@+id/buttonSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkBox1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="@string/search" />

        <ListView
            android:id="@+id/listView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/firstNumber"
            android:layout_below="@+id/textView1" >
        </ListView>

    </RelativeLayout>

</LinearLayout>