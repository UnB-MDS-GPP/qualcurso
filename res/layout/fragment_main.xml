<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="unb.mdsgpp.qualcurso.EvaluationDetailFragment" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"  >

        <TextView
            android:id="@+id/university"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/university_acronym"
            android:background="@color/medium_green"
            android:ems="10"
            android:fontFamily="@string/title_section1"
            android:gravity="center|fill"
            android:padding="15dp"
            android:text="@string/university"
            android:textColor="@color/medium_dark_green"
            android:textSize="@dimen/title_dimension"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/university_acronym"
            android:layout_width="140dp"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/medium_green"
            android:ems="10"
            android:fontFamily="@string/title_section1"
            android:gravity="left|fill"
            android:textColor="@color/white"
            android:textSize="@dimen/university_dimension"
            android:textStyle="bold" />

    </RelativeLayout>
    
    <TextView
        android:id="@+id/general_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dark_gray"
        android:ems="10"
        android:gravity="center"
        android:text="@string/general_information"
        android:textColor="@color/white"
        android:textSize="@dimen/subtitle_dimension"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/general_data"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/gainsboro"
        android:ems="10"
        android:fontFamily="@string/title_section1"
        android:gravity="left|fill"
        android:textColor="@color/black"
        android:textSize="@dimen/subtitle_dimension"
        android:textStyle="bold" />


	<TextView
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/dark_gray"
        android:ems="10"
        android:gravity="center"
        android:text="@string/indicator"
        android:textColor="@color/white"
        android:textSize="@dimen/subtitle_dimension"
        android:textStyle="bold" />

	<ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="227dp" >

	            <TextView
	                android:id="@+id/indicator1"
	                android:layout_width="50dp"
	                android:layout_height="40dp"
	                android:layout_alignParentRight="true"
	                android:layout_alignParentTop="true"
	                android:background="@color/gainsboro"
	                android:ems="10"
	                android:fontFamily="@string/title_section1"
	                android:gravity="center"
	                android:padding="10dp"
	                android:textColor="@color/black"
	                android:textSize="@dimen/subtitle_dimension"
	                android:textStyle="bold" />

	            <TextView
	                android:id="@+id/indicator1_text"
	                android:layout_width="match_parent"
	                android:layout_height="40dp"
	                android:layout_alignParentLeft="true"
	                android:layout_alignParentTop="true"
	                android:layout_toLeftOf="@id/indicator1"
	                android:background="@color/gainsboro"
	                android:ems="10"
	                android:fontFamily="@string/title_section1"
	                android:gravity="left"
	                android:padding="10dp"
	                android:text="@string/m_start_year"
	                android:textColor="@color/black"
	                android:textSize="@dimen/subtitle_dimension"
	                android:textStyle="bold" />

	            <TextView
            	    android:id="@+id/indicator2"
            	    android:layout_width="50dp"
            	    android:layout_height="40dp"
            	    android:layout_alignParentRight="true"
            	    android:layout_below="@+id/indicator1"
            	    android:layout_marginTop="5dp"
            	    android:background="@color/gainsboro"
            	    android:ems="10"
            	    android:fontFamily="@string/title_section1"
            	    android:gravity="center"
            	    android:padding="10dp"
            	    android:textColor="@color/black"
            	    android:textSize="@dimen/subtitle_dimension"
            	    android:textStyle="bold" />

	           <TextView
	               android:id="@+id/indicator2_text"
	               android:layout_width="match_parent"
	               android:layout_height="40dp"
	               android:layout_alignTop="@+id/indicator2"
	               android:layout_toLeftOf="@+id/indicator2"
	               android:background="@color/gainsboro"
	               android:ems="10"
	               android:fontFamily="@string/title_section1"
	               android:gravity="left"
	               android:padding="10dp"
	               android:text="@string/d_start_year"
	               android:textColor="@color/black"
	               android:textSize="@dimen/subtitle_dimension"
	               android:textStyle="bold" />

	        </RelativeLayout>
	    </LinearLayout>
	</ScrollView>

</LinearLayout>